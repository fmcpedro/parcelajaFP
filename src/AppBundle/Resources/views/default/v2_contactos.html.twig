{% extends 'AppBundle::v2_base.html.twig' %}


{% block stylesheets %}
    {{ parent() }}
{% endblock %}



{% block body %}

    <!--@LM header -->
    {% include 'AppBundle:default:v2_header.html.twig'   with {'selected_menu': 'homepage'} %}

    <section class="container g-pt-70">
        <div class="row justify-content-between">
            <div class="col-md-7 g-mt-50 g-mb-100">
                <h2 class="h2 h2--md h2--lg mb-0">{% trans %}contactus_block_01_title01{% endtrans %}</h2>
                <p class="mb-5">{% trans %}contactus_block_01_subtitle01{% endtrans %}</p>

                {% for flashMessage in app.session.flashbag.get('notice') %}
                    <div class="alert alert-success">
                        {{ flashMessage }}
                    </div>
                {% endfor %}




                {% if not form.vars.valid %}
                    {# Loop through every form item #}
                    {% for child in form.children %}
                        {# Display the errors of the form item #}
                        {%for error in child.vars.errors%}
                            <div class="alert alert-danger">
                                {{error.message}}
                            </div>
                        {%endfor%}
                    {%endfor%}
                {%endif%}






                <!-- Contact Form -->
                {{ form_start(form) }} 
                <div class="row">
                    <div class="col-md-6 form-group g-mb-20">
                        <label class="g-font-size-14">{% trans %}contactus_block_01_name{% endtrans %} <span class="g-color-red">*</span></label>
                        {{ form_widget(form.name, {'attr': {'class': 'form-control g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--focus rounded-3 g-py-13 g-px-15'}}) }}
                        {{ form_errors(form.name) }}
                    </div>

                    <div class="col-md-6 form-group g-mb-20">
                        <label class="g-font-size-14">{% trans %}contactus_block_01_email{% endtrans %}  <span class="g-color-red">*</span></label>
                        {{ form_widget(form.email, {'attr': {'class': 'form-control g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--focus rounded-3 g-py-13 g-px-15'}}) }}
                        {{ form_errors(form.email) }}
                    </div>

                    <div class="col-md-6 form-group g-mb-20">
                        <label class="g-font-size-14">{% trans %}contactus_block_01_subject{% endtrans %}  <span class="g-color-red">*</span></label>
                        {{ form_widget(form.subject, {'attr': {'class': 'form-control g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--focus rounded-3 g-py-13 g-px-15'}}) }}
                        {{ form_errors(form.subject) }}
                    </div>

                    <div class="col-md-6 form-group g-mb-20">
                        <label class="g-font-size-14">{% trans %}contactus_block_01_telephone{% endtrans %}  <span class="g-color-red">*</span></label>
                        {{ form_widget(form.phone, {'attr': {'class': 'form-control g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--focus rounded-3 g-py-13 g-px-15'}}) }}
                        {{ form_errors(form.phone) }}
                    </div>

                    <div class="col-md-12 form-group g-mb-40">
                        <label class="g-font-size-14">{% trans %}contactus_block_01_message{% endtrans %}  <span class="g-color-red">*</span></label>
                        {{ form_widget(form.message, {'attr': {'class': 'form-control g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--focus g-resize-none rounded-3 g-py-13 g-px-15'}}) }}
                        {{ form_errors(form.message) }}
                    </div>


                    <div class="col-md-12 form-group g-mb-40">
                        <label class="g-font-size-14">{{ form.vars.value.firstValue }} + {{ form.vars.value.secondValue }} = ? <span class="g-color-red">*</span></label>
                        {{ form_widget(form.firstValue, {'attr': {'class': ''}}) }}
                        {{ form_widget(form.secondValue, {'attr': {'class': ''}}) }}
                        {{ form_widget(form.validation, {'attr': {'class': 'form-control g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--focus g-resize-none rounded-3 g-py-13 g-px-15'}}) }}
                        {{ form_errors(form.validation) }}
                    </div>
                </div>

                <button class="btn u-btn-primary rounded-3 g-py-12 g-px-20" type="submit" role="button">{% trans %}contactus_block_01_button{% endtrans %}</button>
                {{ form_end(form) }}
                <!-- End Contact Form -->
            </div>

            <div class="col-md-4 g-mt-50 g-mb-100">
                <h2 class="h2 h2--md h2--lg mb-5">Parcela Já</h2>
                <p class="mb-5"> </p>

                <div class="mb-4">
                    <h5 class="g-font-size-18">{% trans %}contactus_block_01_address01{% endtrans %}:</h5>
                    <p class="g-font-size-16">Avenida da República, 48-b, 6º
                        <br>1050-195 Lisboa</p>
                </div>

                <div class="mb-4">
                    <h5 class="g-font-size-18">Email:</h5>
                    <p>
                        <strong>{% trans %}contactus_block_01_geral{% endtrans %}:</strong> <a class="g-color-primary--hover" href="mailto:geral@parcelaja.pt">geral@parcelaja.pt</a></br>
                        <strong>{% trans %}contactus_block_01_comercial{% endtrans %}:</strong> <a class="g-color-primary--hover" href="mailto:suporte@parcelaja.pt">suporte@parcelaja.pt</a></br>
                        <strong>{% trans %}contactus_block_01_clientes{% endtrans %}:</strong> <a class="g-color-primary--hover" href="mailto:suporte@parcelaja.pt">suporte@parcelaja.pt</a></br>
                    </p>
                </div>

                <div class="mb-3">
                    <h5 class="g-font-size-18">{% trans %}contactus_block_01_telephone02{% endtrans %}:</h5>
                    <p>{% trans %}contactus_block_01_geral{% endtrans %}: <a class="g-color-primary--hover" href="tel:+351215881280">+351 215 881 280</a>
                    </p>
                </div>

                <div class="g-mb-30">
                    <p class="g-font-size-14"><em>{% trans %}contactus_block_01_workdays{% endtrans %}</em>
                    </p>
                </div>




                <!-- Figure Social Icons -->
                <ul class="list-inline">
                    <li class="list-inline-item">
                        <a class="u-icon-v1 g-bg-gray-light-v5 g-color-white--hover g-bg-primary--hover rounded-circle" href="https://www.facebook.com/parcelajapt/" target="_blank">
                            <i class="g-font-size-default fa fa-facebook"></i>
                        </a>
                    </li>
                    <li class="list-inline-item g-mx-4">
                        <a class="u-icon-v1 g-bg-gray-light-v5 g-color-white--hover g-bg-primary--hover rounded-circle" href="https://www.linkedin.com/company/parcela-j%C3%A1" target="_blank">
                            <i class="g-font-size-default fa fa-linkedin"></i>
                        </a>
                    </li>
                </ul>
                <!-- End Figure Social Icons -->
            </div>
        </div>
    </section>

    <!-- Google Map -->
    <div id="GMapCustomized-light" class="js-g-map embed-responsive embed-responsive-21by9 g-height-400" data-type="custom" data-lat="38.740223" data-lng="-9.146112" data-zoom="16" data-title="Agency" data-styles='[["", "", [{"saturation":-100},{"lightness":51},{"visibility":"simplified"}]], ["", "labels", [{"visibility":"on"}]], ["water", "", [{"color":"#bac6cb"}]] ]'
         data-pin="true" data-pin-icon="{{ asset('bundles/app/frontend/v2/assets/img-parcelaja/contactos/pin-map.png') }}">
    </div>
    <!-- End Google Map -->







    <!--@LM Footer Call to Action -->
    {% include 'AppBundle:default:v2_footer_call_to_action.html.twig' %}

    <!--@LM Footer -->
    {% include 'AppBundle:default:v2_footer.html.twig' %}



{% endblock %}




