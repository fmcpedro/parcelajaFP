            <div class="col-lg-9 g-mb-50 g-mb-0--lg">
                {% for post in posts %}
                    <!-- Artigo -->
                    <article class="text-center g-mb-100">
                        <figure class="g-pos-rel mb-5">
                            <a href="#">
                                <img class="img-fluid" src="{{ vich_uploader_asset(post, 'imageFile') }}" alt="{{ post.title }}">
                            </a>
                        </figure>

                        <!-- Data -->
                        <ul class="list-inline g-font-weight-600 g-font-size-12 text-uppercase mb-3">
                            <li class="list-inline-item g-ml-10">
                                <i class="align-middle mr-1 icon-education-124 u-line-icon-pro"></i>
                                {{post.publishedAt|date("F j, Y, g:i a")}} 
                            </li>
                        </ul>
                        <!-- End - Data -->

                        <!-- Informações -->
                        <div class="g-px-50 g-px-100--md mb-4">
                            <h3 class="mb-4"><a class="u-link-v5 h3 h3--md h3--lg g-color-primary--hover" href="{{ url_to_post(post) }}">{{post.title}}</a></h3>
                            <p class="g-font-size-17">{{post.message|slice(0, 198)|raw}}...</p>
                        </div>
                        <!-- End - Informações -->

                        <div class="g-mb-25">
                            <a class="g-font-weight-600 g-font-size-13 text-uppercase" href="{{ url_to_post(post) }}">{% trans %}blog_readmore{% endtrans %}</a>
