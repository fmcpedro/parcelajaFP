                                <div class="d-flex align-items-start flex-column mb-auto">
                                    <h3 class="h5 g-color-white g-font-weight-600 mb-1">{{sub_grupo.fsubgroupname}}</h3>
                                    <span class="d-block g-color-white">{{sub_grupo.group.fgroupslugname|trans}}</span>
                                </div>
                                <ul class="align-items-end flex-column list-inline mt-auto ml-auto mb-0">
                                    <li class="list-inline-item">
                                        <a class="btn u-btn-white g-color-primary" href="#modal-loja-{{sub_grupo.fsubgroupid}}" data-modal-target="#modal-loja-{{sub_grupo.fsubgroupid}}" data-modal-effect="fadein">
                                            {{'forclients_botao_ver_lojas'|trans}}
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <!-- End - SubGrupo-->

                    <!-- Modal -->
                    <div id="modal-loja-{{sub_grupo.fsubgroupid}}" class="text-left g-bg-white g-overflow-y-auto g-mx-25 g-width-90x parcelaja-modal-loja-aderente" style="display: none;">
