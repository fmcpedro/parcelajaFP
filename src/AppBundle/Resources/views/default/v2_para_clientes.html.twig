                pageContainer: $('.container'),
                breakpoint: 991
            });
            // initialization of cubeportfolio - Filtragem de Lojas Aderentes
            $.HSCore.components.HSCubeportfolio.init('.cbp');
        });
        $(window).on('resize', function () {
            setTimeout(function () {
                $.HSCore.components.HSTabs.init('[role="tablist"]');
            }, 200);
        });
