                                <i class="hs-icon hs-icon-close"></i>
                            </button>
                            <h4>{{sub_grupo.fsubgroupname}}</h4>
                            <p>{{sub_grupo.group.fgroupslugname|trans}}</p>
                        </div>
                        <div class="g-pa-20">
                            {% for agencia in sub_grupo.agencyList %}
                                <div class="row align-items-center justify-content-between g-mb-20 g-pt-20{% if loop.index0 > 0 %} g-brd-top g-brd-gray-light-v4 {%endif%}">

                                    <div class="col-8 col-sm-9">
                                        <h5 class="g-mb-0">{{agencia.fagencyname}}</h5>
                                        <p class="g-mb-0">{{agencia.faddress}}</p>
                                        <p class="g-mb-0">{{agencia.fpostalcode1}}-{{agencia.fpostalcode2}}, {{agencia.flocation}}</p>

                                        {% if agencia.ftelephone is not empty %}
                                            <p class="g-mb-0">Tel.: <a href="tel:{{agencia.ftelephone}}">{{agencia.ftelephone}}</a></p>
                                            {%endif%}
                                    </div>
                                    <div class="col-4 col-sm-3 text-right">

                                        {% if agencia.fwebsite is not empty %}
                                            <a class="btn btn-xs btn--sm u-btn-primary g-text-underline--none" href="{{agencia.fwebsite}}" target="_blank">{{'forclients_botao_visitar'|trans}}</a>
                                        {%endif%}
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                    <!-- End - Modal -->
                {% endfor %}
            </div>
        </div>
