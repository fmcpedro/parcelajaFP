{% extends 'base.html.twig' %}

{% block body %}


    <!-- START PAGE CONTENT -->
    <div class="content">
        <!-- START JUMBOTRON -->
        <div class="jumbotron" data-pages="parallax">
            <div class="container-fluid container-fixed-lg sm-p-l-20 sm-p-r-20">
                <div class="inner">
                    <!-- START BREADCRUMB -->
                    <ul class="breadcrumb">
                        <li><a href="#" class="">Parcela Ja</a></li>
                        <li><a href="#" class="active">Mapa de Terminais Instalados</a></li>
                    </ul>
                    <!-- END BREADCRUMB -->
                </div>
            </div>
        </div>
        <!-- END JUMBOTRON -->



        <!-- START CONTAINER FLUID -->
        <div class="container-fluid container-fixed-lg">
            <!-- START PANEL -->
            <div class="panel panel-transparent">
                <div class="panel-heading">
                    <div class="panel-title">Actualizar Terminal </div>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-10">
                            {#<h3>form_title</h3>#}
                            <p>Preencha os campos abaixo para actualizar os dados de um terminal</p>

                            {% for flashMessage in app.session.flashbag.get('notice') %}

                                <div class="alert alert-success">
                                    {{ flashMessage }}
                                </div>

                            {% endfor %}

                            {{ form_start(edit_form, {'attr': {'class': 'form-horizontal'}}) }} 
                            <div class="form-group">
                                <label for="fserial" class="col-sm-3 control-label">Número de Série</label>
                                <div class="col-sm-9">
                                    {{ form_widget(edit_form.fserial, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-3 control-label">Estado</label>

                                <div class="col-sm-9">
                                    <div class="radio radio-success">
                                        {{ form_widget(edit_form.fstate) }}
                                    </div>                                    

                                </div>
                            </div>
                            <div class="form-group">
                                <label for="fsoftversion" class="col-sm-3 control-label">Versão de Software</label>
                                <div class="col-sm-9">
                                    {{ form_widget(edit_form.fsoftversion, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="fagency" class="col-sm-3 control-label">Loja</label>
                                <div class="col-sm-9">
                                    {{ form_widget(edit_form.agency, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>

                            <br>

                            <div class="row">
                                <div class="col-sm-3">
                                    {#<p>I hereby certify that the information above is true and accurate. </p>#}
                                </div>
                                <div class="col-sm-9">
                                    <button class="btn btn-complete btn-cons m-b-10" type="submit">
                                        <i class="pg-form"></i> <span class="bold">Actualizar</span>
                                    </button>
                                    <button class="btn btn-default btn-cons m-b-10" type="reset">
                                        <i class="pg-close"></i> <span class="bold">Limpar</span>
                                    </button>


                                </div>
                            </div>
                            {{ form_end(edit_form) }}

                            {{ form_start(delete_form) }}
                            <a class="btn btn-primary btn-cons m-b-10" href="{{ path('admin_tpos_index') }}">
                                <i class="fa fa-backward"></i> <span class="bold">Voltar a lista de Terminais</span>
                            </a>
                            <button class="btn btn-danger btn-cons m-b-10" type="submit">
                                <i class="fa fa-warning"></i> <span class="bold">Eliminar</span>
                            </button>


                            {{ form_end(delete_form) }}
                        </div>
                    </div>
                </div>
            </div>
            <!-- END PANEL -->
        </div>
        <!-- END CONTAINER FLUID -->


    </div>
    <!-- END PAGE CONTENT -->

{% endblock %}



