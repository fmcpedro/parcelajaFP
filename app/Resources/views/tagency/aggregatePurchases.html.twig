{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript">

        $(document).ready(function () {
            $('#example').DataTable({
                iDisplayLength: 50,
                dom: 'Bfrtip',
                buttons: [
                    {
                        extend: 'copy',
                    },
                    {
                        extend: 'csv',
                    },
                    {
                        extend: 'excel',
                    },
                    {
                        extend: 'colvis',
                        collectionLayout: 'fixed two-column'
                    }
                ],
                columnDefs: [{
                        targets: 0,
                        render: function (data, type, row) {
                            return data.length > 10 ?
                                    data.substr(0, 4) + '…' :
                                    data;
                        }
                    }]
            });
        });
    </script>
{% endblock %}

{% block body %}

    <!-- START PAGE CONTENT -->
    <div class="content">
        <!-- START JUMBOTRON -->
        <div class="jumbotron" data-pages="parallax">
            <div class="container-fluid container-fixed-lg sm-p-l-20 sm-p-r-20">
                <div class="inner">
                    <!-- START BREADCRUMB -->
                    <ul class="breadcrumb">
                        <li><a href="#" class="">Parcela Ja</a></li>
                        <li><a href="#" class="active">Mapa de Compras de Aderentes</a></li>
                    </ul>
                    <!-- END BREADCRUMB -->
                </div>
            </div>
        </div>
        <!-- END JUMBOTRON -->


        <!-- START CONTAINER FLUID -->
        <div class="container-fluid container-fixed-lg">
            <!-- START PANEL -->
            <div class="panel panel-transparent">
                <div class="panel-heading">
                    <div class="panel-title">Filtro de compras por Aderente</div>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-10">
                            {#<h3>form_title</h3>#}
                            <p>Preencha os campos abaixo para os Aderentes pretendidas</p>

                            {# <form method="post" action="{{ path('admin_payments_simulator') }}" class="form-horizontal">#}
                            {{ form_start(search_form, {'attr': {'class': 'form-horizontal'}}) }} 

                            <div class="form-group">
                                <label class="col-sm-3 control-label">Aderente</label>
                                <div class="col-sm-9">
                                    <p><i class="fa fa-warning"></i> Selecionar apenas um dos campos referente ao aderente.</p>
                                    <div class="row">
                                        <label class="col-sm-1 control-label">Agencia</label>
                                        <div class="col-sm-3">
                                            {{ form_widget(search_form.agencyId, {'attr': {'class': 'form-control', 'placeholder':'agency'}}) }}
                                        </div>

                                        <label class="col-sm-1 control-label">SubGrupo</label>
                                        <div class="col-sm-3">
                                            {{ form_widget(search_form.subgroupId, {'attr': {'class': 'form-control', 'placeholder':'subGroup'}}) }}
                                        </div>

                                        <label class="col-sm-1 control-label">Grupo</label>
                                        <div class="col-sm-3">
                                            {{ form_widget(search_form.groupId, {'attr': {'class': 'form-control', 'placeholder':'group'}}) }}
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="status" class="col-sm-3 control-label">Status</label>
                                <div class="col-sm-9">
                                    {{ form_widget(search_form.status, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="numFiscal" class="col-sm-3 control-label">Número Fiscal</label>
                                <div class="col-sm-9">
                                    {{ form_widget(search_form.numFiscal, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="nomeFiscal" class="col-sm-3 control-label">Nome Fiscal</label>
                                <div class="col-sm-9">
                                    {{ form_widget(search_form.nomeFiscal, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>     
                            <br>

                            <div class="row">
                                <div class="col-sm-3">
                                    {#<p>I hereby certify that the information above is true and accurate. </p>#}
                                </div>
                                <div class="col-sm-9">
                                    <button class="btn btn-complete btn-cons m-b-10" type="submit">
                                        <i class="pg-form"></i> <span class="bold">Update</span>
                                    </button>
                                    <button class="btn btn-default btn-cons m-b-10" type="reset">
                                        <i class="pg-close"></i> <span class="bold">Clear</span>
                                    </button>
                                </div>
                            </div>
                            {{ form_end(search_form) }}

                        </div>
                    </div>
                </div>
            </div>
            <!-- END PANEL -->
        </div>
        <!-- END CONTAINER FLUID -->




        {% if lojas is not empty %}
            <!-- START CONTAINER FLUID -->
            <div class="container-fluid container-fixed-lg bg-white">
                <!-- START PANEL -->
                <div class="panel panel-transparent">
                    <div class="panel-heading">
                        <div class="panel-title">Lista de Aderentes </div>
                        <div class="export-options-container pull-right"></div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="panel-body">

                        <table class="table table-condensed table-striped responsive" id="example">
                            <thead>
                                <tr>
                                    <th>Número</th>
                                    <th>Nome</th>
                                    <th>Status</th>
                                    <th>Contacto</th>
                                    <th>Iban</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                {%  set total = 0  %}
                                {% for key, loja in lojas %}
                                    <tr>
                                        <td>{{loja.id}}</td>
                                        <td>{{loja.name}}</td>
                                        <td>{% if loja.status %}Activo{% else %}Inactivo{% endif %}</td>
                                        <td>{{loja.contact}}</td>
                                        <td>{{loja.iban}}</td>
                                        <td>{{loja.total|number_format(2, '.', ',') }} €</td>
                                        {%  set total = total + loja.total %}
                                    </tr>
                                {% endfor %}
                            <tfoot>
                                <tr>
                                    <td style="text-align: right" colspan="5"><b>TOTAL</b></td>
                                    <td><b>{{total|number_format(2, '.', ',') }} €</b></td>
                                </tr>
                            </tfoot>
                        </table>

                    </div>
                </div>
                <!-- END PANEL -->
            </div>
            <!-- END CONTAINER FLUID -->
        {% endif%}

    </div>
    <!-- END PAGE CONTENT -->

{% endblock %}
